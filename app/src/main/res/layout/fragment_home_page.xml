<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page"
    android:id="@+id/home_page">

    <ImageButton
        android:id="@+id/video_mode"
        android:layout_width="130dp"
        android:layout_height="115dp"

        android:layout_marginEnd="40dp"

        android:adjustViewBounds="true"
        android:background="#8a8a8a"
        android:scaleType="fitXY"

        android:src="@drawable/video_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863" />

    <ImageButton

        android:id="@+id/audio_mode"
        android:layout_width="130dp"
        android:layout_height="115dp"

        android:adjustViewBounds="true"
        android:background="#8a8a8a"
        android:scaleType="fitXY"

        android:src="@drawable/audio_foruse"
        app:layout_constraintBottom_toBottomOf="@+id/video_mode"
        app:layout_constraintEnd_toStartOf="@+id/video_mode"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_mode"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textColor="@color/white"
        android:background="#8a8a8a"
        android:id="@+id/textView"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:text="Audio Recoder"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/audio_mode"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textColor="@color/white"
        android:background="#8a8a8a"
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginEnd="40dp"
        android:text="Video Recoder"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/video_mode"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:textColor="@color/white"
        android:background="#8a8a8a"
        android:id="@+id/downloadbt"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:text="Download your masterpice"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/roomcontainer"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:textSize="25dp"
        android:text="Room: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homepage_settinginfo"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="150dp"
        android:text="Setting here:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/downloadbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <ProgressBar
        android:id="@+id/dwprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="366dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363" />

    <TextView
        android:id="@+id/downloadmessage"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />


</androidx.constraintlayout.widget.ConstraintLayout>